{
	"name": "polaroid",
	"version": "0.0.2",
	"description": "SPA for generating images through OpenAI",
	"scripts": {
		"server:dev": "NODE_OPTIONS='--experimental-specifier-resolution=node' nodemon ./bin/www.js",
		"parcel:build": "parcel build src/frontend/index.html",
		"parcel:dev": "parcel src/frontend/index.html --port 59049 --hmr-port 59049"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RobRotell/polaroid.git"
	},
	"author": "Rob Rotell",
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"bugs": {
		"url": "https://github.com/RobRotell/polaroid/issues"
	},
	"homepage": "https://github.com/RobRotell/polaroid#readme",
	"source": "src/frontend/index.html",
	"targets": {
		"default": {
			"distDir": "../public",
			"outputFormat": "global",
			"context": "browser"
		},
		"frontend-js": {
			"source": "./src/frontend/js/index.js",
			"distDir": "../public/dist"
		},
		"frontend-css": {
			"source": "./src/frontend/scss/index.scss",
			"distDir": "../public/dist"
		}
	},
	"dependencies": {
		"@prisma/client": "^4.16.2",
		"alpinejs": "^3.12.3",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dayjs": "^1.11.9",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"helmet": "^7.0.0",
		"matter-js": "^0.19.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"normalize.css": "^8.0.1",
		"openai": "^3.3.0",
		"particles.js": "^2.0.0",
		"sharp": "^0.32.1"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.9.3",
		"eslint": "^8.44.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.27.5",
		"nodemon": "^3.0.0",
		"parcel": "^2.9.3"
	}
}
